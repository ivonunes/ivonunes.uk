---
layout: false
permalink: /feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <script src="/javascript/vendor/rss-style.js" xmlns="http://www.w3.org/1999/xhtml"></script>
  <channel>
    <title><%= site_data.title %></title>
    <link><%= absolute_url('/') %></link>
    <description><%= site_data.author.bio %></description>
    <language><%= site_data.lang %></language>
    <lastBuildDate><%= Time.now.strftime('%a, %d %b %Y %H:%M:%S %z') %></lastBuildDate>
    <% posts = blog(:blog).articles.sort_by(&:date).reverse.first(25) %>
    <% posts.each do |post| %>
    <% is_photo_post = photo_article?(post) || present_value?(post.data.photo) %>
    <item>
      <% if post.data.title && !is_photo_post %>
      <title><%= CGI.escapeHTML(post.data.title) %></title>
      <% end %>
      <link><%= canonical_url(post) %></link>
      <pubDate><%= post.date.strftime('%a, %d %b %Y %H:%M:%S %z') %></pubDate>
      <% author_name = rss_author_name %>
      <% if author_name %>
      <author><%= CGI.escapeHTML(author_name) %></author>
      <% end %>
      <guid><%= canonical_url(post) %></guid>
      <% feed_body = absolutize_image_sources(post.body) %>
      <description><%= CGI.escapeHTML(feed_body) %></description>
    </item>
    <% end %>
  </channel>
</rss>
